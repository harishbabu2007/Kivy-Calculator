MainWidget:

<MainWidget>:
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		TextInput:
			id: calc_input
			text: "0"
			multiline: False
			halign: "right"
			font_size: 55
			size_hint: (1, .2)
			font_name: "fonts/Roboto-Regular.ttf"

		GridLayout:
			cols: 4
			rows: 5

			# Row - 1
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "%"
				on_press: root.percent_calc()
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "CE"
				on_press: root.clear()
			Button:
				id: clear
				size_hint: .2, .2
				font_size: 32
				text: "C"
				on_press: root.clear()
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "/"
				on_press: root.divide_calc()

			# Row - 2
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "7"
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.number_press(7)
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "8"
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.number_press(8)
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "9"
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.number_press(9)
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "X"
				on_press: root.multiply_calc()

			# Row - 3
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "4"
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.number_press(4)
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "5"
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.number_press(5)

			Button:
				size_hint: .2, .2
				font_size: 32
				text: "6"
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.number_press(6)
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "-"
				on_press: root.subtract_calc()

			# Row - 4
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "1"
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.number_press(1)
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "2"
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.number_press(2)

			Button:
				size_hint: .2, .2
				font_size: 32
				text: "3"
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.number_press(3)
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "+"
				on_press: root.add_calc()

			# Row - 5
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "+/-"
				background_color: (157/255, 157/255, 157/255, 1)
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "0"
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.number_press(0)

			Button:
				size_hint: .2, .2
				font_size: 32
				text: "."
				background_color: (157/255, 157/255, 157/255, 1)
				on_press: root.dot_calc()
			Button:
				size_hint: .2, .2
				font_size: 32
				text: "="
				background_normal: ""
				background_color: (52/255, 152/255, 219/255, 1)
				on_press: root.equal_to_calc()
